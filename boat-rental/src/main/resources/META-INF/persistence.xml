<persistence xmlns="https://jakarta.ee/xml/ns/persistence"
             version="3.0">
    <persistence-unit name="testPU" transaction-type="RESOURCE_LOCAL">
        <!-- Register all entities -->
        <class>htl.leonding.rental.entity.Yacht</class>
        <class>htl.leonding.rental.entity.Boat</class>
        <class>htl.leonding.rental.entity.Sailboat</class>
        <class>htl.leonding.rental.entity.Motorboat</class>
        <class>htl.leonding.rental.entity.Extras</class>
        <class>htl.leonding.rental.entity.Lease</class>
        <class>htl.leonding.rental.entity.Reservation</class>
        <class>htl.leonding.rental.entity.Payment</class>
        <!-- Add others as needed -->

        <properties>
            <property name="jakarta.persistence.jdbc.driver" value="org.postgresql.Driver"/>
            <property name="jakarta.persistence.jdbc.url" value="jdbc:postgresql://localhost:5432/postgres"/>
            <property name="jakarta.persistence.jdbc.user" value="postgres"/>
            <property name="jakarta.persistence.jdbc.password" value="postgres"/>

            <property name="hibernate.hbm2ddl.auto" value="create-drop"/>
            <property name="hibernate.dialect" value="org.hibernate.dialect.PostgreSQLDialect"/>
            <property name="hibernate.show_sql" value="true"/>
        </properties>
    </persistence-unit>
</persistence>
